{
    "builds": [
        {
            "src": "api/app.py",
            "use": "@vercel/python"
        }
    ],
    "routes": [
        {
            "src": "(.*)",
            "dest": "api/app.py"
        },
        {
            "src": "api/templates/create_article.html",
            "headers": {"Access-Control-Allow-Origin": "*"},
            "continue": true
        }
    ]
}